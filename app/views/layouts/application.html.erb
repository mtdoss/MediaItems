<!DOCTYPE html>
<html>
<head>
<title>MediaItems</title>
<%= csrf_meta_tags %>
</head>
<body>

<header>
  <h1>Media Items App</h1>
  <% if flash[:notices] %>
    <div class="notices">
    <% flash[:notices].each do |msg| %>
      <p><b><%= msg %></b></p>
  <% end %>
  </div>
<% end %>

  <div class="pull-right">
    <% if current_user %>
      <p>Welcome <%= current_user.username %></p>
    <%= button_to "Log Out", session_url, method: :delete %>
    <%= link_to "Create some new media!", new_item_url %>

  <% else %>

      <p><%= link_to "Sign Up", new_user_url %></p>
      <p>or</p>
      <p><%= link_to "Log In", new_session_url %></p>
  <% end %>
  </div>
</header>

<%= yield %>

</body>
</html>
